<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/rtActionBar</item>
    </style>
    
	<!-- ActionBar styles -->
	<style name="rtActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@color/rt_green</item>
	</style>
	
	<style name="user_pref_group">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:layout_marginBottom">@dimen/standard_padding</item>
	</style>
	
	<style name="user_prefs_label">
	    <item name="android:textStyle">bold</item>
	    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	    <item name="android:layout_width">@dimen/user_pref_label</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginRight">@dimen/standard_padding</item>
	</style>
	
	<style name="user_prefs_spinner">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="user_prefs_input">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:lines">1</item>
	</style>
	
</resources>
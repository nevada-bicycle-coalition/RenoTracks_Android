<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_marginRight="@dimen/standard_padding" />
	<LinearLayout
	    android:layout_toRightOf="@+id/notification_icon"
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center_vertical">
		<TextView
		    android:id="@+id/notification_time_display"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/zero_time" />
		<TextView
			android:id="@+id/notification_distance_display"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/zero_distance" />
	</LinearLayout>
	<LinearLayout
	    android:layout_alignParentRight="true"
	    android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
		<ImageButton
		    android:id="@+id/notification_record"
		    style="?android:attr/buttonBarButtonStyle"
		    android:src="@drawable/ic_action_record"
		    android:layout_width="wrap_content"
	        android:layout_height="match_parent"/>
		<ImageButton
		    android:id="@+id/notification_pause"
		    style="?android:attr/buttonBarButtonStyle"
		    android:src="@drawable/ic_action_pause"
		    android:layout_width="wrap_content"
	        android:layout_height="match_parent"/>
		<ImageButton
		    android:id="@+id/notification_stop"
		    style="?android:attr/buttonBarButtonStyle"
		    android:src="@drawable/ic_action_stop"
		    android:layout_width="wrap_content"
	        android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>